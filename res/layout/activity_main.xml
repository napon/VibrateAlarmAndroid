<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main" >

    <Button
        android:id="@+id/button_vibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_ringtone"
        android:layout_below="@+id/button_ringtone"
        android:layout_marginTop="39dp"
        android:text="Vibrate" />

    <Button
        android:id="@+id/button_ringtone_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_vibrate"
        android:layout_below="@+id/button_vibrate"
        android:layout_marginTop="46dp"
        android:text="Set ringtone time" />

    <Button
        android:id="@+id/button_vibrate_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_ringtone_time"
        android:layout_marginTop="37dp"
        android:text="Set vibrate time" />

    <Button
        android:id="@+id/button_ringtone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_vibrate_time"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
        android:text="Ringtone" />

</RelativeLayout>